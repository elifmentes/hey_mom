<%= simple_form_for(@transaction) do |f| %>
  <%= f.input :category, collection: %w[Housing Debt Transportation Food Personal Other] %>
  <%= f.input :description %>
  <%= f.input :amount %>
  <%= f.input :date, label: "Due date", as: :string, input_html: { class: "datepicker" } %>
  <%= f.input :expense, collection: [["Expense", true], ["Income", false]], label: false %>
  <%= f.button :submit, id: "transaction-submit" %>
<% end %>

