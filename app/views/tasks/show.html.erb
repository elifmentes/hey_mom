
<div class="container">
  <h1><%= @task.title %></h1>
  <i class="fas fa-chevron-left hidden" id="back-button"></i>
  <div>
    <div id="steps" data-steps="<%= @steps.reverse.to_json %>">
      <p id="step-title"><%= @steps.reverse.first.title %></p>
      <p id="step-content"></p>
    </div>
    <div class="buttons">
      <button type="button" class="step-buttons" id="nope-button">Nope</button>
      <button type="button" class="step-buttons" id="yes-button">Sure</button>
    </div>
  </div>
</div>

