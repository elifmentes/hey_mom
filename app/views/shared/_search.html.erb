<div class="search-bar">
  <%= form_tag tasks_path, class: "form-inline", method: :get do %>
    <div class="input-container">
      <i id="glass" class="fas fa-search"></i>
        <%= text_field_tag :query,
          params[:query],
          id: "form-search",
          class: "form-control",
          placeholder: "Search",
          value: ''
        %>
    </div>
  <% end %>
</div>

